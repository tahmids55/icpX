<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.icpx.controller.TopicHistoryController"
            styleClass="root"
            stylesheets="@/styles.css">

    <!-- Top Bar -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            
            <Button fx:id="backButton" text="â† Back" styleClass="secondary-button" onAction="#handleBack"/>
            
            <Text text="Learned Topics History" styleClass="header-title">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Text>
            
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" styleClass="content-container">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Statistics Summary -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox styleClass="stat-box" spacing="5">
                    <padding>
                        <Insets top="15" right="20" bottom="15" left="20"/>
                    </padding>
                    <Text fx:id="totalLearnedText" styleClass="stat-value" text="0">
                        <font>
                            <Font name="System Bold" size="32"/>
                        </font>
                    </Text>
                    <Text text="Total Learned" styleClass="stat-label">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Text>
                </VBox>
            </HBox>

            <!-- Topics Table -->
            <VBox VBox.vgrow="ALWAYS">
                <Text text="Learned Topics" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Text>
                
                <TableView fx:id="topicsTable" VBox.vgrow="ALWAYS" styleClass="custom-table">
                    <columns>
                        <TableColumn fx:id="topicColumn" text="Topic" prefWidth="200"/>
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="350"/>
                        <TableColumn fx:id="urlColumn" text="Resource URL" prefWidth="300"/>
                        <TableColumn fx:id="dateColumn" text="Date Learned" prefWidth="150"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
