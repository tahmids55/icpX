<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" prefHeight="600.0" prefWidth="500.0" spacing="20.0" styleClass="container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.icpx.controller.LoginController">
   <children>
      <VBox alignment="CENTER" maxWidth="400.0" spacing="20.0" styleClass="card">
         <children>
            <Text styleClass="title" text="icpX" />
            <Text styleClass="subtitle" text="Enter your password to continue" />
            <VBox spacing="8.0">
               <children>
                  <Label styleClass="label" text="Password" />
                  <PasswordField fx:id="passwordField" onAction="#handleLogin" prefWidth="340.0" promptText="Enter your password" styleClass="password-field" />
               </children>
            </VBox>
            <Label fx:id="errorLabel" styleClass="error-label" visible="false" />
            <VBox prefHeight="5.0" />
            <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="340.0" styleClass="button" text="Login" />
         </children>
      </VBox>
   </children>
</VBox>