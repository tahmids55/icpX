<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.icpx.controller.AddTopicDialogController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Topic Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="topicField" promptText="e.g., Dynamic Programming" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="descField" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Resource URL:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="urlField" promptText="Resource URL (optional)" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>
